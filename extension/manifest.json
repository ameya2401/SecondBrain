{
  "manifest_version": 3,
  "name": "SecondBrain",
  "version": "1.0.0",
  "description": "Save and organize your browser tabs with AI-powered search",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecondBrain"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save the current tab"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}